                      x:Name="succesfullScreen"
                      Visibility="Collapsed">
                    <TextBlock Text="Success"
                               FontSize="50"
                               FontWeight="Bold"
                               Foreground="#3AA9AD"
                               HorizontalAlignment="Center"
                               Margin="0,400,0,0" />
                    <Image Source="\Images\check.png"
                           Height="30"
                           Grid.Column="1"
                           HorizontalAlignment="Left"
                           Margin="450,200,0,0" />
                </Grid>
                <Grid Grid.Column="2"
                      x:Name="ConvertScreen"
                      Visibility="Visible">
                    <ComboBox x:Name="purpuleCoinsPanel"
                              Style="{StaticResource comboBoxStyle}"
                              Margin="-400,300,0,90"
                              Width="200"
                              SelectedIndex="0"
                              SelectionChanged="PurpleCoinsPanel_SelectionChanged"></ComboBox>
                    <ComboBox x:Name="purpuleCoinsPanelSecond"
                              Style="{StaticResource comboBoxStyle}"
                              Margin="350,300,0,90"
