                           VerticalAlignment="Top"
                           FontSize="18"
                           x:Name="stepTooConfirm" />
                <Separator Grid.Column="2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Height="15"
                           Margin="377,82,0,0"
                           Width="145"
                           Background="LightGray"
                           x:Name="stepThreeSeparator" />
                <TextBlock Grid.Column="2"
                           HorizontalAlignment="Left"
                           Margin="555,72,0,0"
                           TextWrapping="Wrap"
                           Text="3rd Step"
                           VerticalAlignment="Top"
                           Foreground="#92969F"
                           FontSize="11"
                           x:Name="stepTreeNote" />
                <TextBlock Grid.Column="2"
                           HorizontalAlignment="Left"
                           Margin="555,85,0,0"
                           TextWrapping="Wrap"
                           Text="Success"
                           Foreground="#92969F"
                           VerticalAlignment="Top"
                           FontSize="18"
                           x:Name="stepThreeSuccess" />
