<Window x:Class="UserGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:UserGUI"
        xmlns:lvc1="clr-namespace:LiveCharts;assembly=LiveCharts"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="700"
        Width="1183.5"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    <Border CornerRadius="30"
            BorderThickness="8"
            BorderBrush="Black"
            Background="#F5F3FB">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="335" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Source="\Images\close.png"
                   Grid.Column="2"
                   Panel.ZIndex="1"
                   MouseUp="Image_MouseUp"
                   Style="{StaticResource imgClose}" />
            <Border CornerRadius="20"
                    Width="95"
                    Background="#1D212C"
                    Margin="28,25,28,25">
                <StackPanel Orientation="Vertical">
                    <Image Source="/Images/diamond.png"
                           Width="32"
                           Margin="0,55" />
                    <StackPanel x:Name="tradeButtons" Visibility="Collapsed">
                        <Button Margin="0,30,0,0" 
                            x:Name="tradeSelection"
                            Style="{StaticResource MenuButtonStyle}"
                            Click="tradeSelectionClick">
                            <StackPanel>
                                <Image Source="/Images/collage.png"
                                       Width="22" />
                                <Ellipse Width="5"
                                         Height="5"
                                         Fill="White"
                                         Margin="3"
                                         Visibility="Collapsed"
                                         x:Name="tradeSelectionEllipse" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel x:Name="convertButtons" Visibility="Collapsed">
                      
                    <Button Style="{StaticResource MenuButtonStyle}"
                            x:Name="convertSelection"
                            Click="convertSelectionClick">
                        <StackPanel>
                            <Image Source="/Images/convert.png"
                                   Width="22" />
                            <Ellipse Width="5"
                                     Height="5"
                                     Fill="White"
                                     Margin="3"
                                     x:Name="convertSelectionEllipse"/>
                        </StackPanel>
                    </Button>
                    </StackPanel>
                    <StackPanel x:Name="walletButtons" Visibility="Collapsed">
                        
                    <Button Style="{StaticResource MenuButtonStyle}"
                            x:Name="walletSelection"
                            Click="walletSelectionClick">
                        <StackPanel>
                            <Image Source="/Images/prop.png"
                                   Width="22" />
                            <Ellipse Width="5"
                                     Height="5"
                                     Fill="White"
                                     Margin="3"
                                     Visibility="Collapsed"
                                     x:Name="walletSelectionEllipse"/>
                        </StackPanel>
                    </Button>
                    </StackPanel>
                    <StackPanel x:Name="prizeButtons" Visibility="Collapsed">
                        
                    <Button Style="{StaticResource MenuButtonStyle}"
                            x:Name="prizeSelection"
                            Click="prizeSelectionClick">
                        <StackPanel>
                            <Image Source="/Images/notif.png"
                                   Width="22" />
                            <Ellipse Width="5"
                                     Height="5"
                                     Fill="White"
                                     Margin="3"
                                     Visibility="Collapsed"
                                     x:Name="prizeSelectionEllipse"/>
                        </StackPanel>
                    </Button>
                    </StackPanel>
                    <StackPanel x:Name="profileButtons" Visibility="Collapsed">
                        
                    <Button Style="{StaticResource MenuButtonStyle}"
                            x:Name="profileSelection"
                            Click="profileSelectionClick">
                        <StackPanel>
                            <Image Source="/Images/profile.png"
                                   Width="22" />
                            <Ellipse Width="5"
                                     Height="5"
                                     Fill="White"
                                     Margin="3"
                                     Visibility="Collapsed" 
                                     x:Name="profileSelectionEllipse"/>
                        </StackPanel>
                    </Button>
                    </StackPanel>
                    
                    
                    
                    
                    <StackPanel x:Name="homeInfoButtons" 
                                Visibility="Visible">
                        <Button Margin="0,30,0,0"
                                x:Name="homeInfoSelection"
                                Style="{StaticResource MenuButtonStyle}"
                                Click="homeInfoSelectionClick">
                            <StackPanel>
                                <Image Source="/Images/white-house.png"
                                       Width="22" />
                                <Ellipse Width="5"
                                         Height="5"
                                         Fill="White"
                                         Margin="3"
                                         Visibility="Collapsed"
                                         x:Name="homeInfoSelectionEllipse" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <StackPanel x:Name="usersProfileButtons"
                                Visibility="Visible">
                        <Button Style="{StaticResource MenuButtonStyle}"
                                x:Name="usersProfileSelection"
                                Click="usersProfileClick">
                            <StackPanel>
                                <Image Source="/Images/profile.png"
                                       Width="22" />
                                <Ellipse Width="5"
                                         Height="5"
                                         Fill="White"
                                         Margin="3"
                                         Visibility="Collapsed"
                                         x:Name="usersProfileEllipse" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel x:Name="CashButtons"
                                Visibility="Visible">
                        <Button Style="{StaticResource MenuButtonStyle}"
                                x:Name="CashSelection"
                                Click="CashClick">
                            <StackPanel>
                                <Image Source="/Images/cash.png"
                                       Width="22" />
                                <Ellipse Width="5"
                                         Height="5"
                                         Fill="White"
                                         Margin="3"
                                         Visibility="Collapsed"
                                         x:Name="CashEllipse" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            
            
            
            <Grid Grid.Column="1" x:Name="convertSecondColumn" Visibility="Collapsed">
                <StackPanel Orientation="Vertical"
                            Grid.Column="1"
                            Margin="27, 78, 52, 0">
                    <TextBlock x:Name="textBlock"
                               TextWrapping="Wrap"
                               Text="Wallet"
                               FontSize="26"
                               FontFamily="Leelawadee" />
                    <Grid Margin="0,60,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="USD "
                                       FontSize="20"
                                       Foreground="#1D212C" />
                            <!--<Image Source="/Images/down.png"
                               Width="12" />-->
                        </StackPanel>
                        <TextBlock x:Name="TOTBalance"
                                   Grid.Column="1"
                                   HorizontalAlignment="Right"
                                   Text="$0"
                                   FontSize="20"
                                   VerticalAlignment="Top"
                                   FontFamily="PT Sans Pro Narrow" />
                        <TextBlock Grid.Row="1"
                                   HorizontalAlignment="Left"
                                   Text="Market Value"
                                   FontSize="12"
                                   VerticalAlignment="Top"
                                   FontFamily="PT Sans"
                                   Foreground="#92969F" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   HorizontalAlignment="Right"
                                   Text="Total Balance"
                                   FontSize="12"
                                   VerticalAlignment="Top"
                                   FontFamily="PT Sans"
                                   Foreground="#92969F" />
                    </Grid>
                    <Separator Margin="0, 35, 0, 0" />
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <StackPanel x:Name="coinsPanel" />
                    </ScrollViewer>
                </StackPanel>
            </Grid>
            
            
            
            
            
            
            
            <Grid Grid.Column="2" x:Name="convertThirdColums" Visibility="Collapsed">
                <TextBlock x:Name="textBlock3"
