                             Foreground="#FF1D212C"
                             FontSize="28"
                             FontFamily="PT Sans Narrow"
                             x:Name="ConvertValue"
                             MaxLength="10"
                             Width="170"
                             LostFocus="ConvertValue_LostFocus"
                             MouseDown="ConvertValue_MouseDown"
                             TextChanged="ConvertValue_TextChanged" />
                    <Separator Background="#92969F"
                               HorizontalAlignment="Left"
                               Height="15"
                               Margin="35,440,0,0"
                               VerticalAlignment="Top"
                               Width="231" />
                    <TextBlock HorizontalAlignment="Left"
                               Margin="35,389,0,0"
                               Text="You spent"
                               VerticalAlignment="Top"
                               Foreground="#92969F"
                               FontFamily="PT Sans" />
                    <TextBlock HorizontalAlignment="Left"
                               Margin="229,407,0,0"
                               Text="BTC"
                               VerticalAlignment="Top"
                               Foreground="#FF1D212C"
                               FontSize="28"
                               FontFamily="PT Sans Narrow"
                               x:Name="ConvertSymbol" />
                    <TextBlock HorizontalAlignment="Left"
                               Margin="35,455,0,0"
                               Text="0"
                               VerticalAlignment="Top"
                               Foreground="#92969F"
                               FontFamily="PT Sans Narrow"
                               x:Name="ConvertUSDValue" />
                    <TextBlock HorizontalAlignment="Left"
                               Margin="248,455,0,0"
                               Text="USD"
                               VerticalAlignment="Top"
                               Foreground="#92969F"
                               FontFamily="PT Sans Narrow" />
                    <TextBlock x:Name="textBlock1_Copy10"
                               HorizontalAlignment="Left"
                               Margin="393,389,0,0"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               Foreground="#92969F"
                               FontFamily="PT Sans"><Run Text="You " /><Run Text="got" /></TextBlock>
                    <TextBlock x:Name="ConvertToValue"
                               HorizontalAlignment="Left"
                               Margin="394,407,0,0"
                               TextWrapping="Wrap"
                               Text="0"
                               VerticalAlignment="Top"
                               Foreground="#92969F"
                               FontSize="28"
                               FontFamily="PT Sans Narrow" />
                    <TextBlock x:Name="ConvertToUSDValue"
                               HorizontalAlignment="Left"
                               Margin="393,453,0,0"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               Foreground="#92969F"
                               FontFamily="PT Sans Narrow"
                               Text="0"></TextBlock>
                    <Separator HorizontalAlignment="Left"
                               Height="15"
                               Margin="395,440,0,0"
                               VerticalAlignment="Top"
                               Width="231"
                               Background="LightGray" />
                    <TextBlock x:Name="ConvertToSymbol"
                               HorizontalAlignment="Left"
                               Margin="590,407,0,0"
                               TextWrapping="Wrap"
                               Text="ETH"
                               VerticalAlignment="Top"
                               Foreground="#92969F"
                               FontSize="28"
                               FontFamily="PT Sans Narrow" />
                    <TextBlock x:Name="textBlock1_Copy13"
                               HorizontalAlignment="Left"
                               Margin="609,453,0,0"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               Foreground="#92969F"
                               FontFamily="PT Sans Narrow"
                               Text="USD" />
                </Grid>
                <TextBlock HorizontalAlignment="Left"
                           Grid.Column="2"
                           Margin="34,586,0,0"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Foreground="#92969F"
                           FontFamily="PT Sans Narrow"
                           Text="Conversion fee:" />
                <TextBlock HorizontalAlignment="Left"
                           Grid.Column="2"
                           Margin="34,603,0,0"
                           TextWrapping="Wrap"
                           Text="0.03 BNB"
                           VerticalAlignment="Top"
                           Foreground="#FF1D212C"
                           FontSize="17.5"
                           FontFamily="PT Sans Narrow" />
                <Button Background="#FF1D212C"
                        Grid.Column="2"
                        Height="50"
                        Width="170"
                        Content="Convert Now"
                        Foreground="White"
                        FontSize="15"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Margin="0,0,75,123"
                        Click="convertionClick"
                        x:Name="ConfirmationButton" />
                <Grid Grid.Column="2"
                      x:Name="StepToo"
                      Visibility="Collapsed">
                    <TextBlock HorizontalAlignment="Left"
                               Margin="160,250,0,0"
                               Text="Confirm converting"
                               VerticalAlignment="Top"
                               Foreground="#FF1D212C"
                               FontSize="40"
                               FontFamily="PT Sans Narrow" />
                    <TextBlock HorizontalAlignment="Left"
                               Margin="315,300,0,0"
                               Text="To"
                               VerticalAlignment="Top"
                               Foreground="#FF1D212C"
                               FontSize="40"
                               FontFamily="PT Sans Narrow" />
                    <TextBlock HorizontalAlignment="Left"
                               Margin="229,407,0,0"
                               Text="BTC"
                               VerticalAlignment="Top"
                               Foreground="#FF1D212C"
                               FontSize="28"
                               FontFamily="PT Sans Narrow"
                               x:Name="AfterConvertingSymbol" />
                    <TextBlock HorizontalAlignment="Left"
                               Margin="590,407,0,0"
                               TextWrapping="Wrap"
                               Text="ETH"
                               VerticalAlignment="Top"
                               Foreground="#FF1D212C"
                               FontSize="28"
                               FontFamily="PT Sans Narrow"
                               x:Name="AfterToConvertingSymbol" />
                    <TextBlock HorizontalAlignment="Left"
                               Margin="394,407,0,0"
                               TextWrapping="Wrap"
                               Text="0"
                               VerticalAlignment="Top"
                               Foreground="#FF1D212C"
                               FontSize="28"
                               FontFamily="PT Sans Narrow"
                               x:Name="AfterToConvertingValue" />
                    <TextBlock HorizontalAlignment="Left"
                               Margin="35,407,0,0"
                               TextWrapping="Wrap"
                               Text="0"
                               VerticalAlignment="Top"
                               Foreground="#FF1D212C"
                               FontSize="28"
                               FontFamily="PT Sans Narrow"
                               x:Name="AfterConvertingValue" />
                    <Button Background="#FF1D212C"
                            Height="50"
                            Width="170"
                            Content="Cancel"
                            Foreground="White"
                            FontSize="15"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right"
                            Margin="0,0,455,123"
