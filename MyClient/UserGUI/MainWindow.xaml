                              SelectedIndex="0"
                              SelectionChanged="PurpleCoinsPanel_SelectionChangedSecond"></ComboBox>
                    <Rectangle Fill="#FF1D212C"
                               HorizontalAlignment="Left"
                               Height="38"
                               Margin="314,359,0,0"
                               RadiusX="17"
                               RadiusY="17"
                               VerticalAlignment="Top"
                               Width="35" />
                    <Image Source="/Images/convert.png"
                           Width="22"
                           VerticalAlignment="Top"
                           Margin="321,367,340,0"
                           Height="22"
                           MouseDown="Image_MouseDown" />
                    <TextBlock HorizontalAlignment="Left"
                               Margin="35,389,0,0"
                               Text="You spent"
                               VerticalAlignment="Top"
                               Foreground="#92969F"
                               FontFamily="PT Sans" />
