                           HorizontalAlignment="Left"
                           Margin="32,85,0,0"
                           TextWrapping="Wrap"
                           Text="Select"
                           Foreground="#1D212C"
                           VerticalAlignment="Top"
                           FontSize="18" />
                <Separator Grid.Column="2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Height="15"
                           Margin="107,82,0,0"
                           Width="75"
                           Background="#92969F" />
                <Separator Grid.Column="2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Height="15"
