            <Grid x:Name="UserUpdateSection">
                
            </Grid>
            <Grid Grid.Column="1" Visibility="Collapsed" x:Name="profileFirstColumn">
                <StackPanel>
                    <Rectangle
                               HorizontalAlignment="Center"
                               Height="125"
                               RadiusX="100"
                               Margin="0,25,0,0"
                               RadiusY="100"
                               VerticalAlignment="Top"
                               Width="125"
                               Stroke="black"
                               StrokeThickness="2">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/Images/profile-avatar.png" />
                        </Rectangle.Fill>
                    </Rectangle>
                    
                    <TextBlock Text="UID" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    
                    <Button Height="70"
                            Margin="0,25,0,0"
                            Background="#1D212C"
                            Content="Verification"
                            Foreground="White"
                            FontSize="25"
                            Width="300"/>
                    <Button Height="70"
                               Margin="0,25,0,0"
                               Background="#1D212C"
                            Content="Order History"
                            Foreground="White"
                            FontSize="25"
                            Width="300"
                            Click="OrderHistoryButtonClick"/>
                    <Button Height="70"
                               Margin="0,25,0,0"
                            Content="Update User"
                               Background="#1D212C"
                            Foreground="White"
                            FontSize="25"
                            Width="300"
                            Click="UpdateUserClick"/>
                    <Button Height="100"
                               Margin="0,80,0,0"
                               Background="#1D212C"
                            Content="Log Out"
                            Foreground="White"
                            FontSize="25"
                            Width="300"
                            Click="LogOutClick"
                            />
                </StackPanel>

                
            </Grid>
            <Grid Grid.Column="2"
                  x:Name="profileSecondColumn" Visibility="Collapsed">
                <Grid x:Name="OrderHistoryProfile" Visibility="Collapsed">
                    <TextBlock HorizontalAlignment="Center" Text="Order History" FontSize="50" Margin="0,60,0,0"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="0,130,0,0">
                        <Grid 
                              x:Name="OrderHistoryPanel">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Symbol"
                                       FontSize="25"
                                       Margin="0,0,40,0"
                                       Grid.Column="0" />
                            <TextBlock Text="Side"
                                       FontSize="25"
                                       Margin="0,0,40,0"
                                       Grid.Column="1" />
                            <TextBlock Text="Type"
                                       FontSize="25"
                                       Margin="0,0,40,0"
                                       Grid.Column="2" />
                            <TextBlock Text="QTY"
                                       FontSize="25"
                                       Margin="0,0,40,0"
                                       Grid.Column="3" />
                            <TextBlock Text="Price"
                                       FontSize="25"
                                       Margin="0,0,40,0"
                                       Grid.Column="4" />
                            <TextBlock Text="FillPrice"
                                       FontSize="25"
                                       Margin="0,0,40,0"
                                       Grid.Column="5" />
                            <TextBlock Text="Status"
                                       FontSize="25"
                                       Margin="0,0,40,0"
                                       Grid.Column="6" />
                            <TextBlock Text="PlacingT"
                                       FontSize="25"
                                       Margin="0,0,40,0"
                                       Grid.Column="7" />
                            <TextBlock Text="ClosingT"
                                       FontSize="25"
                                       Margin="0,0,40,0"
                                       Grid.Column="8" />
                        </Grid>
                    </ScrollViewer>
                </Grid>
                <Grid x:Name="UpdateUserColumn" Visibility="Visible">
                    <TextBlock HorizontalAlignment="Center"
                               Text="User Information"
                               FontSize="50"
                               Margin="0,60,0,0" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Margin="0,150,0,0" Grid.Column="0" HorizontalAlignment="Center" Width="240">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="UserName"
                                           FontSize="40" />
                                <Image Source="\Images\record.png"
                                       Height="20"
                                       Opacity="0.3"
                                       Grid.Column="3"
                                       Margin="12 15 0 0"
                                       Visibility="Collapsed"
                                       x:Name="UserNameErr">
                                    <Image.ToolTip>
                                        <ToolTip Content="Password does not match" />
                                    </Image.ToolTip>
                                </Image>
                            </StackPanel>
                            <TextBox Text="{Binding Path=UserName}"
                                     MaxLength="10"
                                     HorizontalAlignment="Left"
                                     Width="170"
                                     FontSize="20"
                                     x:Name="changeUserName"
                                     />
                            <Separator Background="#92969F"
                                       HorizontalAlignment="Left"
                                       Height="15"
                                       VerticalAlignment="Top"
                                       Width="180"
                                       Margin="0,-10,0,0" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Email"
                                           FontSize="40"
                                           Margin="0,30,0,0" />
                                <Image Source="\Images\record.png"
                                       Height="20"
                                       Opacity="0.3"
                                       Grid.Column="3"
                                       Margin="100 35 0 0"
                                       Visibility="Collapsed"
                                       x:Name="EmailErr">
                                    <Image.ToolTip>
                                        <ToolTip Content="Password does not match" />
                                    </Image.ToolTip>
                                </Image>
                            </StackPanel>
                            <TextBox Text="{Binding Path=Email}"
                                     MaxLength="10"
                                     HorizontalAlignment="Left"
                                     Width="170"
                                     FontSize="20"
                                     x:Name="changeEmail"/>
                            <Separator Background="#92969F"
                                       HorizontalAlignment="Left"
                                       Height="15"
                                       VerticalAlignment="Top"
                                       Width="180"
                                       Margin="0,-10,0,0" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Password"
                                           FontSize="40"
                                           Margin="0,30,0,0" />
                                <Image Source="\Images\record.png"
                                       Height="20"
                                       Opacity="0.3"
                                       Grid.Column="3"
                                       Margin="30 35 0 0"
                                       Visibility="Collapsed"
                                       x:Name="PassErr">
                                    <Image.ToolTip>
